<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card" style="width: 17rem; height:33rem;">
                        <img class="card-img-top"
                             src="/images/product-images/{{this._id}}.jpg"
                             alt="Card image cap"
                                style="">
                        <div class="card-body">
                            <h3 class="card-title">{{this.Name}}</h3>
                            <h5 class="card-title">{{this.Price}}</h5>
                            <h6 class="card-text">{{this.Description}}</h6>
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>